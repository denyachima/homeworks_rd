<script>
$(document).ready(function() {
  let friendCount = Math.floor(Math.random() * 100); // Рандомне число друзів
  $("#friendCount").text(friendCount);

  $("#addFriendButton").click(function() {
    $(this).prop("disabled", true);
    $(this).removeClass("btn-primary").addClass("btn-secondary").text("Очікується підтвердження");
    friendCount++;
    $("#friendCount").text(friendCount);
  });
});
</script>

