text = input("Введіть текст: ")

if text.isdigit():
    number = int(text)
    if number % 2 == 0:
        print("Введене число є парним.")
    else:
        print("Введене число є непарним.")
elif text.isalpha():
    print("Введений текст є словом і має довжину:", len(text))
else:
    print("Введений текст не є числом або словом.")
