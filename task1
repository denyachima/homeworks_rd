from app import app

if __name__ == '__main__':
    app.run()

from flask import Flask

app = Flask(__name__)

from app import routes

from flask import render_template, jsonify
from app import app

import logging

logging.basicConfig(level=logging.INFO)

@app.route('/hello')
def hello():
    app.logger.info('Hello endpoint accessed.')
    return 'Hello, world!'

@app.route('/html')
def return_html():
    app.logger.info('HTML endpoint accessed.')
    return '<h1>This is an HTML response.</h1>'

@app.route('/json')
def return_json():
    app.logger.info('JSON endpoint accessed.')
    data = {'message': 'This is a JSON response.'}
    return jsonify(data)
python run.py

