import time
import threading
import multiprocessing

def task(seconds):
    time.sleep(seconds)

# Используем потоки
start = time.time()
threads = []
for i in range(10):
    thread = threading.Thread(target=task, args=(1,))
    thread.start()
    threads.append(thread)

for thread in threads:
    thread.join()
end = time.time()

print(f'Время выполнения с использованием потоков: {end - start:.3f} секунд')

# Используем процессы
start = time.time()
processes = []
for i in range(10):
    process = multiprocessing.Process(target=task, args=(1,))
    process.start()
    processes.append(process)

for process in processes:
    process.join()
end = time.time()

print(f'Время выполнения с использованием процессов: {end - start:.3f} секунд')
