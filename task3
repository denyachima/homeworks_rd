from flask import Flask, request, render_template_string

app = Flask(__name__)

@app.route('/params', methods=['GET'])
def get_params():
    # Отримуємо всі query parameters
    query_params = request.args

    # Генеруємо HTML таблицю з ключами та значеннями query parameters
    table_html = "<table><tr><th>parameter</th><th>value</th></tr>"
    for key, value in query_params.items():
        table_html += f"<tr><td>{key}</td><td>{value}</td></tr>"
    table_html += "</table>"

    return render_template_string(table_html)

if __name__ == '__main__':
    app.run(debug=True)
